<section class="form-container">
  <h2>Edit Recipe</h2>
  <form action="/cosmetics/{{_id}}/edit" method="post">
    <label for="name">Product Name:</label>
    <input type="text" id="name" name="name" value="{{name}}" />

    <label for="skin">Skin Type:</label>
    <textarea id="skin" name="skin">Suitable for: {{skin}}</textarea>

    <label for="description">Product Description:</label>
    <textarea id="description" name="description">{{description}}</textarea>

    <label for="ingredients">Key Ingredients:</label>
    <textarea id="ingredients" name="ingredients">{{ingredients}}</textarea>

    <label for="benefits">Benefits:</label>
    <textarea id="benefits" name="benefits">{{benefits}}</textarea>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" value="{{price}}" />

    <label for="image">Image URL:</label>
    <input type="url" id="image" name="image" value="{{image}}" />

    <button type="submit">Create Product Card</button>
  </form>
</section>